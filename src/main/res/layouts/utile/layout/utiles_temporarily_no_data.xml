<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/utiles_temporarily_no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgrade"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_wushuju_kongyemian" />


    <TextView
        android:id="@+id/tv_notdata_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/no_network_nodatawasfound"
        android:textColor="@color/app_text_coler"
        android:textSize="15dp" />


</LinearLayout>